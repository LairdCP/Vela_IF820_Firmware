    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-c",
                "${config:comport_IF820_device1}",
                "-d",
                "False"
            ]
        },
        {
            "name": "SPP IF820->IF820",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sample_spp_IF820-IF820.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-cp",
                "${config:comport_IF820_device1}",
                "-cc",
                "${config:comport_IF820_device2}",
                "-ppp",
                "${config:id_pico_probe_device1}",
                "-ppc",
                "${config:id_pico_probe_device2}",
                "-d"
            ]
        },
        {
            "name": "CYSPP IF820->IF820",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sample_cyspp_IF820-IF820.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-cp",
                "${config:comport_IF820_device1}",
                "-cc",
                "${config:comport_IF820_device2}",
                "-ppp",
                "${config:id_pico_probe_device1}",
                "-ppc",
                "${config:id_pico_probe_device2}",
                "-d"
            ]
        },
        {
            "name": "BT900 Single",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sample_bt900_query_firmware.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-c",
                "${config:comport_BT900_device1}",
                "-d"
            ]
        },
        {
            "name": "IF820 -> BT900",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sample_spp_IF820-BT900.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-cp",
                "${config:comport_BT900_device1}",
                "-cc",
                "${config:comport_IF820_device1}",
                "-ppc",
                "${config:id_pico_probe_device1}",
                "-d"
            ]
        },
        {
            "name": "BT900 -> IF820",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sample_spp_BT900-IF820.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-cp",
                "${config:comport_IF820_device1}",
                "-cc",
                "${config:comport_BT900_device1}",
                "-ppc",
                "${config:id_pico_probe_device1}",
                "-d"
            ]
        },
        {
            "name": "Debug UART programmer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ifx_uart_programmer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-d",
                "-c",
                "${config:hci_port_IF820_device1}",
                "-b",
                "${config:default_baud}",
                "-m",
                "${config:mini_driver}",
                "-f",
                "${config:ezserial_firmware}",
            ]
        },
        {
            "name": "Debug UART programmer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ifx_uart_programmer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-d",
                "-c",
                "${config:hci_port_IF820_device1}",
                "-b",
                "${config:default_baud}",
                "-m",
                "${config:mini_driver}",
                "-f",
                "${config:ezserial_firmware}",
            ]
        },
        {
            "name": "Debug BLE Sample",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sample_${input:ble_sample}.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-p",
                "${config:comport_IF820_device2}",
                "-c",
                "${config:comport_IF820_device1}"
            ],
        }
    ],
    "inputs": [
        {
            "id": "ble_sample",
            "description": "The name of the BLE sample to run",
            "type": "pickString",
            "options": [
                "advertiser",
                "custom_gatt",
                "advertiser_tx_power",
            ],
            "default": "advertiser",
        },
    ]
}
