    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug UART programmer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ifx_uart_programmer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-d",
                "-c",
                "${config:peripheral_com_port}", // set peripheral_com_port in settings.json
                "-b",
                "${config:initial_baud}",
                "-m",
                "${config:mini_driver}",
                "-f",
                "${config:ezserial_firmware}",
            ]
        }
    ]
}
