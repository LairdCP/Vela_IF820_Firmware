{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run UART programmer",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/ifx_uart_programmer.py",
                "-c",
                "${config:peripheral_com_port}", // set peripheral_com_port in settings.json
                "-b",
                "${config:initial_baud}",
                "-m",
                "${config:mini_driver}",
                "-f",
                "${config:ezserial_firmware}",
            ],
            "problemMatcher": []
        },
    ]
}
